<div class='row'>
  <div class='col-sm-6 col-sm-offset-3'>
    <%= form_for @gram do |f| %>
      <% if @gram.errors.any? %>
        <div class='alert alert-danger'>
          <ul>
            <% @gram.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class='form-group text-center'>
        <%= link_to icon('camera', 'Select Image'), '#', class: 'js-gram-image-upload btn btn-primary' %>
        <%= f.hidden_field :image_cache %>
      </div>

      <hr/>

      <div class='form-group'>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :country_code %>
        <%= f.country_select :country_code, { include_blank: true, priority_countries: ['SG', 'MY'] }, { class: 'form-control' } %>
      </div>

      <hr/>

      <div>
        <%= f.submit class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
