<%= link_to "New Gram", new_gram_path %>
<% @grams.each do |gram| %>
<div>
  <div>
    <div>Me</div>
    <div><%= link_to("#{time_ago_in_words(gram.created_at)} ago", gram)%></div>
    <div><%= link_to 'X', gram, method: :delete %></div>
  </div>
  <div><%= gram.title %></div>
  <div><%= gram.content %></div>
  <div><%= country_name(gram.country_code) %></div>
</div>
<hr>
<%= paginate @grams %>
<% end %>
